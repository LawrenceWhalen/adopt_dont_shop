<h1>Application</h1>

<h2>Name: <%= @application.name %></h2>
<h3>Address: <%= @application.address_street %>, <%= @application.address_city %>, <%= @application.address_state %> <%= @application.address_zip %></h3>
<h3>Description: <%= @application.description %></h3>
<h3>Status: <%= @application.status %></h3>

Pets:
<div id="pet_list">
<ol>
  <% @pets.each do |pet| %>
    <li><%= link_to "#{pet.name}", "/pets/#{pet.id}", {method: :get} %></li>
  <% end %>
</ol></div><br><br>

<%= form_with url: "/applications/#{@application.id}", method: :get, local: true do |f| %>
  <%= f.label :search, 'Pet Name:' %>
  <%= f.text_field :search %>
  <%= f.submit "Submit" %>
<% end %>

<% if !@pets_2.nil? then %>
Matches:
<div id="search">
<ol>
  <% @pets_2 .each do |pet| %>
    <li><%= "#{pet.name}" %><%= button_to 'Adopt this Pet', "/application_pets", method: :post, local: true, params: {application: "#{@application.id}", pet: "#{pet.id}"} %></li>
  <% end %>
</ol></div><br><br>
<% end %>
